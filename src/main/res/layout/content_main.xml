<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="com.aleks.calculator.MainActivity"
        android:padding="0dp"
        android:background="#fe6a00">


    <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:background="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/controls"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView">

        <Button
                android:text="7"
                android:id="@+id/b7"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:textColor="#ffffff"
                android:background="#444549"
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:textSize="30sp"
                android:onClick="add"
                android:tag="7"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="8"
                app:layout_row="0"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="1dp"
                android:id="@+id/b8"
                android:background="#444549"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                android:textSize="30sp"
                android:tag="8"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="9"
                android:id="@+id/b9"
                app:layout_row="0"
                android:layout_margin="1dp"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:background="#444549"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                android:tag="9"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="/"
                android:id="@+id/bDivide"
                app:layout_row="0"
                app:layout_column="3"
                android:layout_margin="1dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:background="#2b2b2e"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textSize="30sp"
                android:textAlignment="center"
                android:onClick="add"
                android:tag="/"
                style="?android:attr/buttonStyleSmall"
                />

        <ImageButton
                android:src="@android:drawable/ic_input_delete"
                app:layout_row="0"
                app:layout_column="4"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/bDel"
                android:background="#2b2b2e"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:textSize="30sp"
                android:onClick="delete"
                android:layout_margin="1dp"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="4"
                android:id="@+id/b4"
                app:layout_row="1"
                android:layout_margin="1dp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:tag="4"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="#444549"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="5"
                app:layout_row="1"
                app:layout_column="1"
                android:layout_margin="1dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/b5"
                android:tag="5"
                android:textSize="30sp"
                android:background="#444549"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="6"
                app:layout_row="1"
                android:layout_margin="1dp"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/b6"
                android:tag="6"
                android:textSize="30sp"
                android:background="#444549"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="*"
                app:layout_row="1"
                app:layout_column="3"
                android:layout_margin="1dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:tag="*"
                android:id="@+id/bMultiply"
                android:textSize="30sp"
                android:background="#2b2b2e"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"

                />

        <Button
                android:text="()"
                app:layout_row="1"
                app:layout_column="4"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/bBrackets"
                android:layout_margin="1dp"
                android:textSize="30sp"
                android:background="#2b2b2e"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="addBrackets"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="1"
                android:id="@+id/b1"
                app:layout_row="2"
                app:layout_column="0"
                app:layout_columnWeight="1"
                android:layout_margin="1dp"
                app:layout_rowWeight="1"
                android:textSize="30sp"
                android:tag="1"
                android:textColor="#ffffff"
                android:background="#444549"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="2"
                app:layout_row="2"
                app:layout_column="1"
                app:layout_columnWeight="1"
                android:layout_margin="1dp"
                app:layout_rowWeight="1"
                android:id="@+id/b2"
                android:tag="2"
                android:textSize="30sp"
                android:background="#444549"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="3"
                app:layout_row="2"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/b3"
                android:tag="3"
                android:layout_margin="1dp"
                android:textSize="30sp"
                android:background="#444549"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="â€”"
                app:layout_row="2"
                android:layout_margin="1dp"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/bMinus"
                android:tag="-"
                android:textSize="30sp"
                android:background="#2b2b2e"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                app:layout_rowSpan="2"
                android:text="="
                app:layout_row="2"
                android:layout_margin="1dp"
                app:layout_column="4"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/bEquals"
                android:background="#2b2b2e"
                android:textSize="35dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="calculate"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="."
                app:layout_row="3"
                app:layout_column="1"
                android:layout_margin="1dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/bDot"
                android:tag="."
                android:textSize="30sp"
                android:background="#444549"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="+"
                app:layout_row="3"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/bPlus"
                android:tag="+"
                android:layout_margin="1dp"
                android:textSize="30sp"
                android:background="#2b2b2e"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="0"
                app:layout_row="3"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/b0"
                android:tag="0"
                android:layout_margin="1dp"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="#444549"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="add"
                style="?android:attr/buttonStyleSmall"
                />

        <Button
                android:text="C"
                app:layout_row="3"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:id="@+id/bC"
                android:layout_margin="1dp"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="#444549"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAlignment="center"
                android:onClick="clear"
                style="?android:attr/buttonStyleSmall"
                />
    </android.support.v7.widget.GridLayout>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#5b5656"
            android:textColor="#ffffff"
            android:textAlignment="viewEnd"
            android:text="0.0"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>


</RelativeLayout>

